[
  {
    "id": "cross_fields",
    "template": {
      "lang": "mustache",
      "source": {
        "query": {
          "multi_match": {
            "type": "cross_fields",
            "query": "{{query_string}}",
            "operator": "{{operator}}",
            "minimum_should_match": "{{minimum_should_match}}%",
            "tie_breaker": "{{tie_breaker}}",
            "fields": [
              "url^{{url|boost}}",
              "title^{{title|boost}}",
              "body^{{body|boost}}"
            ]
          }
        }
      }
    }
  },
   {
    "id": "best_fields",
    "template": {
      "lang": "mustache",
      "source": {
        "query": {
          "multi_match": {
            "type": "best_fields",
            "query": "{{query_string}}",
            "tie_breaker": "{{tie_breaker}}",
            "fields": [
              "url^{{url|boost}}",
              "title^{{title|boost}}",
              "body^{{body|boost}}"
            ]
          }
        }
      }
    }
  },
  {
    "id": "combined",
    "template": {
      "lang": "mustache",
      "source": {
        "query": {
          "bool": {
            "should": [
              {
                "multi_match": {
                  "type": "cross_fields",
                  "query": "{{query_string}}",
                  "operator": "{{multi_match|cross_fields|operator}}",
                  "minimum_should_match": "{{multi_match|cross_fields|minimum_should_match}}%",
                  "tie_breaker": "{{multi_match|cross_fields|tie_breaker}}",
                  "fields": [
                    "url^{{multi_match|cross_fields|url|boost}}",
                    "title^{{multi_match|cross_fields|title|boost}}",
                    "body^{{multi_match|cross_fields|body|boost}}"
                  ],
                  "_name": "multi_match|cross_fields"
                }
              },
              {
                "multi_match": {
                  "type": "best_fields",
                  "query": "{{query_string}}",
                  "tie_breaker": "{{multi_match|best_fields|tie_breaker}}",
                  "fields": [
                    "url^{{multi_match|best_fields|url|boost}}",
                    "title^{{multi_match|best_fields|title|boost}}",
                    "body^{{multi_match|best_fields|body|boost}}"
                  ],
                  "_name": "multi_match|best_fields"
                }
              }
            ]
          }
        }
      }
    }
  },
  {
    "id": "basic",
    "template": {
      "lang": "mustache",
      "source": {
        "query": {
          "bool": {
            "should": [
              {
                "match": {
                  "url": {
                    "query": "{{query_string}}",
                    "boost": "{{match|url|boost}}",
                    "_name": "match|url"
                  }
                }
              },
              {
                "match": {
                  "title": {
                    "query": "{{query_string}}",
                    "boost": "{{match|title|boost}}",
                    "_name": "match|title"
                  }
                }
              },
              {
                "match": {
                  "body": {
                    "query": "{{query_string}}",
                    "boost": "{{match|body|boost}}",
                    "_name": "match|body"
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
]